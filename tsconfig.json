{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": false,
    "rootDir": "lib",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
